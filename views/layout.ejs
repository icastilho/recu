<!DOCTYPE html>
<html ng-app="recu">
  <head>
    <title><%- title %></title>

    <!-- Viewport mobile tag for sensible mobile support -->
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1" />

    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap-theme.min.css">

    <!--STYLES-->
    <link rel="stylesheet" href="/linker/styles/app.css">
    <link rel="stylesheet" href="/linker/styles/signin.css">
    <!--STYLES END-->

  </head>

  <body ng-controller="Index">
      <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
          <div class="container-fluid">
              <div class="navbar-header">
                  <a class="navbar-brand" href="/">Recuperação tributária</a>
              </div>

              <div class="collapse navbar-collapse">
                  <ul class="nav navbar-nav">
                      <li ><a href="/notafiscal/list">Notas Fiscais</a> </li>
                  </ul>
                  <ul class="nav navbar-nav navbar-right">
                      <li ng-show="!user.authenticated">
                          <a ng-show="!user.authenticated" href="/login">Log in</a>
                      </li>
                      <li ng-show="!user.authenticated">
                          <a href="/signup">Sign Up</a>
                      </li>
                      <li ng-show="user.authenticated">
                          <a href="#">Bem vindo {{ user.first_name }}!</a>
                      </li>
                      <li ng-show="user.authenticated">
                          <a href="#" ua-logout>Log Out</a>
                      </li>
                  </ul>
              </div>

          </div>
      </nav>

    <!-- Include the view file for the current controller/route -->
    <div class="container" role="main">
        <%- body %>
    </div>

    <script src="//code.jquery.com/jquery-2.1.0.js"></script>
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/angular.js/1.2.18/angular.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/angular.js/1.2.18/angular-route.min.js"></script>

    <script src="https://app.userapp.io/js/userapp.client.js"></script>
    <script src="https://app.userapp.io/js/angularjs.userapp.js"></script>

    <!--SCRIPTS-->
    <script src="/linker/js/socket.io.js"></script>
    <script src="/linker/js/sails.io.js"></script>
    <script src="/linker/js/app.js"></script>
    <script src="/linker/js/controllers.js"></script>
    <script src="/linker/js/recu.js"></script>
    <!--SCRIPTS END-->

    <!--TEMPLATES-->
    <script type="text/javascript" src="/jst.js"></script>
    <!--TEMPLATES END-->

    </body>

</html>
